# OpenAI API Configuration
OPENAI_API_KEY=<your-openai-api-key>
OPENAI_MODEL=<your-openai-model>

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3000/mcp

# x402 Payment Configuration
RECEIVER_ADDRESS=<your-receiver-address>

# x402 Facilitator URL
FACILITATOR_URL=<your-facilitator-url>

# Wallet Configuration for MCP Client (Buyer Side)
# Use CRONOS_PRIVATE_KEY for Cronos payments (recommended)
# Format: 0x... (your wallet private key with USDC on Cronos Testnet)
CRONOS_PRIVATE_KEY=<your-cronos-private-key>

# Cronos Testnet Configuration
# RPC URL for Cronos Testnet (Chain ID 338)
CRONOS_RPC_URL=https://evm-t3.cronos.org

# Token mapping for agent prompts (Cronos Testnet)
# Set this to the ERC20 contract address of USDC/devUSDC.e on Cronos Testnet you intend to use.
CRONOS_USDC_TOKEN_ADDRESS=<your-cronos-testnet-usdc-token-address>